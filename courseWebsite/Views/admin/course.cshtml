@model IEnumerable<courseWebsite.Models.course>

@{
    ViewBag.Title = "course";
    Layout = "~/Views/Shared/_mainlayout.cshtml";
}

<h2 style="text-align:center;font-size:xx-large">course</h2>

<p style="text-align:center;padding-bottom:10px">
    @Html.ActionLink("ADD NEW COURSE", "AddCourse", "admin", new { @class = "btn btn-primary" })
</p>



<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.img)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.create_date)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.category_id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.trainer_id)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td st>
               
                <img src="~/attach/@item.img" width="100" height="100" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.create_date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.category_id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.trainer_id)
            </td>
            <td>
                @Html.ActionLink("Trainee", "trainee", "trainee", new { idcourse = item.id }, new { @class = "btn btn-primary" })
                @Html.ActionLink("Edit", "EditCourse", new { id = item.id }, new { @class = "btn btn-primary" })

                @Html.ActionLink("Delete", "deleteCourse", new { id = item.id }, new { @class = "btn btn-danger" })
            </td>
        </tr>
    }

</table>
